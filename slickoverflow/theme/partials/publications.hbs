{{#if resume.certificates.length}}
<section class="section">
  <header>
    <h2 class='section-title'>Certificates</h2>
  </header>

  <section id="education">
    {{#each resume.certificates}}
    <section class="education-item">
      {{#if summary}}
      {{#if @first}}
      <input id="education-item-{{@index}}" type="checkbox" class="toggle-item" checked="checked" />
      {{else}}
      <input id="education-item-{{@index}}" type="checkbox" class="toggle-item" />
      {{/if}}
      <label for="education-item-{{@index}}"></label>
      {{/if}}
      <header class="clear">
        <div class="header-left">
          {{#if issuer}}
          <div class="institution">
            {{#if url}}
            <a target="_blank" href="{{url}}">{{issuer}}</a>
            {{else}}
            {{issuer}}
            {{/if}}
            <div class="date">
              {{#if date}}
              <span class="startDate">
                {{MY date}}
              </span>
              {{/if}}
            </div>
          </div>
          {{/if}}
          {{#if name}}
          <div class="area">
            {{name}}
          </div>
          {{/if}}
        </div>

      </header>

      {{#location}}
      <span class="location">
        <span class="fas fa-map-marker-alt"></span>
        {{#if city}}
        <span class="city">{{city}}, </span>
        {{/if}}
        {{#if countryCode}}
        <span class="countryCode">({{countryCode}})</span>
        {{/if}}
        {{#if region}}
        <span class="region">{{region}}</span>
        {{/if}}
      </span>
      {{/location}}

      {{#if courses.length}}
      <ul class="courses">
        {{#each courses}}
        <li>{{.}}</li>
        {{/each}}
      </ul>
      {{/if}}

      <div class="item">
        {{#if gpa}}
        <div class='gpa'>
          <strong> Grade:</strong> <span>{{gpa}}</span>
        </div>
        {{/if}}
        {{#if summary}}
        <div class="summary">{{paragraphSplit summary}}</div>
        {{/if}}
      </div>
    </section>
    {{/each}}
  </section>
</section>
{{/if}}