{{#if resume.skills.length}}
<section>
  <h2 id="skills" class="h3 faded hr">
    Skills
    <span class="symbol icon-wrench"></span>
  </h2>
  <dl class="skills skills_container">
    {{#each resume.skills}}
      <dt class="h4 fl  skills_item">{{name}}</dt>
      <dd class="faded clearafter">
        {{#if keywords.length}}
          <div>
            <span class="sr-only">Keywords:</span>
            <ul class="tags">
              {{#each keywords}}
                <li class="tag">{{.}}</li>
              {{/each}}
            </ul>
          </div>
        {{/if}}
      </dd>
    {{/each}}
  </dl>
</section>
{{/if}}
