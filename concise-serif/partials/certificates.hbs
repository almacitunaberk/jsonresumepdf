{{#if resume.certificates.length}}
	<div id="education" class="col-md-12">
		<hr class="col-md-9 col-md-offset-3" />
		<div class="container-fluid">
			<div class="row">

				<div class="col-md-3">
					<h3>Certificates</h3>
				</div>

				<div class="col-md-9 courses">
					<div class="container-fluid">

						{{#each resume.certificates}}
							<div class="row no-break">
								{{#if name}}
								<h4 class="institution">
									{{name}}
								</h4>
								{{/if}}
								{{#if issuer}}
								<p class="area">
									{{issuer}}
								</p>
								{{/if}}
								<p class="date">
									{{#if date}}
									- <span class="endDate">{{date}}</span>
									{{/if}}
								</p>
							</div>
						{{/each}}
					</div>
				</div>

			</div>

		</div>
	</div>
{{/if}}