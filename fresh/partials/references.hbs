{{#if resume.references.length}}
<section id="references no-break">
  <div class="left">
    <h2>References</h2>
  </div>
  <div class="right references_container">
    {{#each resume.references}}
    <div class="reference_item">
      <h4 class="name">{{name}}</h4>
      <blockquote class="reference">{{reference}}</blockquote>
    </div>
    {{/each}}
  </div>
</section>
{{/if}}
